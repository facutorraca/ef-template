@model ef_template.Models.Crimen

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Crimen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Villano)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Villano.Nombre)
        </dd>
    
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Peleas)
        </dt>
        
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName(nameof(PeleaContraCrimen.Superheroe))
                    </th>
                    <th>
                        @Html.DisplayName(nameof(PeleaContraCrimen.Resultado))
                    </th>
                    <th>
                        @Html.DisplayName(nameof(PeleaContraCrimen.Herido))
                    </th>
                </tr>
                @foreach (var pelea in Model.Peleas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => pelea.Superheroe.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(model => pelea.Resultado)
                        </td>
                        <td>
                            @Html.DisplayFor(model => pelea.Herido)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
